                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Кюстендил</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Ловеч</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Монтана</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Пазарджик</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Перник</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Плевен</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Пловдив</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Разград</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Русе</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Силистра</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Сливен</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Смолян</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">София - Град</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">София - Област</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Стара Загора</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Търговище</a></li>
