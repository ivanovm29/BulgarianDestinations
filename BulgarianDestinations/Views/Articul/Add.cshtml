@model ArticulFormViewModel

<div class="row">
    <div class="col-md-12 text-center" id="info-new-comment">
        <h2>Добави Артикул</h2>
    </div>
    <div class="col-md-12" id="info-text-type">

        <form asp-action="Add" method="post">

            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit"><h5>Име на артикула:</h5></label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit"><h5>Снимка:</h5></label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit"><h5>Информация:</h5></label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label-add-edit"><h5>Цена:</h5></label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Добави" />
            </div>
        </form>
    </div>

</div>