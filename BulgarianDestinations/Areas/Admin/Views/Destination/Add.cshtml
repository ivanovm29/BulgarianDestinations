@model DestinationFormViewModel

<div class="row">
    <div class="col-md-12 text-center" id="info-new-comment">
        <h2>Добави Дестинация</h2>
    </div>
    <div class="col-md-12" id="info-text-type">

        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.RegionId" class="form-label-add-edit"><h5>Избери регион:</h5></label>
                <select asp-for="@Model.RegionId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Category...</option>
                    @foreach (var region in Model.Regions)
                    {
                        <option value="@region.Id">@region.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.RegionId" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit"><h5>Име на дестинация:</h5></label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit"><h5>Снимка:</h5></label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit"><h5>Информация:</h5></label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Добави" />
            </div>
        </form>
    </div>

</div>